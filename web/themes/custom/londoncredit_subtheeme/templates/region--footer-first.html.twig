{#
/**
* @file
* Theme override to display a region.
*
* Available variables:
* - content: The content for this region, typically blocks.
* - attributes: HTML attributes for the region div.
* - region: The name of the region variable as defined in the theme's
* .info.yml file.
*
* @see template_preprocess_region()
*/
#}
{%
set classes = [
'region',
'region-' ~ region|clean_class,
]
%}
{% if content %}
	<section{{attributes.addClass(classes)}}>
		<div class="row">
			<div class="footerhome col-md-5 offset-md-1 col-lg-3 offset-lg-0">
				{{ drupal_entity('block', 'home', check_access=false) }}
			</div>
			<div class="footerproducts col-md-5 offset-md-1 col-lg-3 offset-lg-0">
				{{ drupal_entity('block', 'products', check_access=false) }}
			</div>
			<div class="importantpages col-md-5 offset-md-1 col-lg-3 offset-lg-0">
				{{ drupal_entity('block', 'importantpages', check_access=false) }}
			</div>
			<div class="socialmedia col-md-5 offset-md-1 col-lg-3 offset-lg-0 ">
				{{ drupal_entity('block', 'socialmedialinks', check_access=false) }}
			</div>
			{# {{ drupal_entity('block', 'footerblock', check_access=false) }} #}
		</div>
	</section>
{% endif %}
